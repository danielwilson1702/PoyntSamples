<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sampleloyaltyapp">

    <uses-permission android:name="poynt.permission.BUSINESS_SERVICE" />
    <uses-permission android:name="poynt.permission.TRANSACTION_SERVICE" />
    <uses-permission android:name="poynt.permission.CONFIGURATION_SERVICE" />
    <uses-permission android:name="poynt.permission.ORDER_SERVICE" />

    <application
        android:name=".SampleLoyaltyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".SampleLoyaltyService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="co.poynt.os.services.v1.IPoyntLoyaltyService" />
            </intent-filter>

            <meta-data
                android:name="co.poynt.os.service.capability"
                android:resource="@xml/loyalty_capability" />
            <!-- Optional: Provide a logo that will appear on screen (not implemented yet) -->
            <!--<meta-data-->
                <!--android:name="co.poynt.os.service.logo"-->
                <!--android:resource="@mipmap/ic_launcher" />-->
        </service>
    </application>

</manifest>